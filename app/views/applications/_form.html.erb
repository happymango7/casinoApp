<%= form_for [@job, @application] do |f| %>
  
  <% if @application.errors.any? %>
    <div class="card-block alert alert-danger" role="alert">
      <h4>Woops. <%= pluralize(@application.errors.count, "small mistake") %> prevented this job post from saving:</h4>
      <ul>
        <% @application.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card-block">

    <div class="form-group row">
      <%= f.label :first_name, "First Name:", class: "col-sm-2 form-control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :first_name, class: "form-control", autofocus: true %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :last_name, "Last Name:", class: "col-sm-2 form-control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :email, "Email:", class: "col-sm-2 form-control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :email, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :message, "Message to Employer:", class: "col-sm-2 form-control-label" %>
      <div class="col-sm-10">
        <%= f.text_area(:message, class: "form-control", rows: "10") %>
      </div>
    </div>

  </div><!-- close card-block -->
  
  <div class="card-block card-footer" id="job-show-footer">
    <div class="row">

      <div class="col-sm-offset-4 col-sm-4 text-xs-center m-t-2">
        <%= f.submit @application.new_record? ? "Submit Your Application" : "Update Your Application", class: "btn btn-success" %>
      </div>

      <div class="col-sm-4 text-xs-right m-t-2">
        <% if !@application.new_record? %>
          <%= link_to "Delete Application", application_path(@application), class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure?" } %>
        <% end %>
      </div>

    </div><!-- close row -->
  </div><!-- close card-block card-footer -->

<% end %>



